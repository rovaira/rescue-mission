<div class="row">
  <%- if @question.errors.present? -%>
    <div class="large-12 alert-box alert" data-alert>
      <ul>
        <%- @question.errors.full_messages.each do |error| -%>
          <li><%= error %></li>
        <%- end -%>
      </ul>
    </div>
  <%- end -%>

  <div class="large-12">
    <h1>Edit Question</h1>

    <%= form_for @question do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Submit" %>
    <% end %>
    <%= button_to "Delete Question", @question, method: :delete, data: {
      confirm: "Are you sure you want to delete this question?"} %>
  </div>
</div>
